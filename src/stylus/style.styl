body, html
  margin 0
  background #000
  color #f0f0f0
  font-family Arial, sans-serif
  width 100%
  height 100%
  overflow hidden

input[type="text"]
  border none
  border-radius 0.25em
  padding 0.5em
  font-size 1em
  width 100%
  box-sizing border-box 
  background #d0d0d0
  &:focus
    outline none

@keyframes zoom-in
  0%
    transform translate3d(0,0,0) scale(1.0)
  100%
    transform translate3d(0,0,0) scale(1.2)

.img
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-size contain
  background-position center center
  background-repeat no-repeat
  /*animation zoom-in 10s ease-in-out*/

.btn
  color #f0f0f0
  text-decoration none
  display inline-block
  padding 0.75em
  background #404040
  border-radius 0.25em
  font-weight bold
  transition all 100ms ease-in-out
  i
    margin-right 0.5em
  &:hover
    background #505050

#config
  position absolute
  top 0
  right 0
  bottom 0
  width 20em
  padding 1em
  background #303030
  transition all 900ms ease-in-out
  transform translate3d(100%,0,0)

  .handle
    position absolute
    right 100%
    width 3em 
    height 3em
    background #303030
    top 2em
    border-radius 0.25em 0 0 0.25em
    cursor pointer
    i
      font-size 2em
      line-height 1.5em
      margin-left 0.3em
      color #808080
      transition all 900ms ease-in-out
      transform translate3d(0,0,0) rotate(0deg)
    &:hover
      i
        color #a0a0a0

  &.visible
    transform translate3d(0,0,0)
    .handle
      i
        transform translate3d(0,0,0) rotate(-360deg)

  form
    margin-top 0.5em
    margin-bottom 1em

  ul
    list-style none
    margin 0
    padding 0
    li
      background #242424
      padding 0.5em
      margin-bottom 1px
      position relative
      .remove
        position absolute
        top 0
        right 0
        width 2em
        height 100%
        text-align center
        line-height 2em
        font-weight bold
        transition all 100ms ease-in-out
        cursor pointer
        &:hover
          background #c03030
